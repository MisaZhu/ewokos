include ../../../make.rule

BUILD_DIR = ../../../build
TARGET_DIR = $(BUILD_DIR)

LDFLAGS = -L$(TARGET_DIR)/lib -lnosys

CFLAGS += -I $(TARGET_DIR)/include -Iinclude

LIB_UPNG_OBJS = src/upng.o

UPNG = $(TARGET_DIR)/lib/libupng.a

$(UPNG): $(LIB_UPNG_OBJS)
	$(AR) rT $(UPNG) $(LIB_UPNG_OBJS)
	cp -r include/* $(TARGET_DIR)/include


clean:
	rm -f $(LIB_UPNG_OBJS)
	rm -f $(UPNG)

